<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_kota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.setditjenp2mkt.apputs.KotaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Aceh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/namakota" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/masjidraya"
                android:padding="5dp"
                android:layout_height="250dp" />

            <TextView
                android:text="Deskripsi:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:id="@+id/deskripsi" />

            <TextView
                android:text="Aceh adalah sebuah provinsi di Indonesia. Aceh terletak di ujung utara pulau Sumatera dan merupakan provinsi paling barat di Indonesia. Ibu kotanya adalah Banda Aceh. Jumlah penduduk provinsi ini sekitar 4.500.000 jiwa. Letaknya dekat dengan Kepulauan Andaman dan Nikobar di India dan terpisahkan oleh Laut Andaman. Aceh berbatasan dengan Teluk Benggala di sebelah utara, Samudra Hindia di sebelah barat, Selat Malaka di sebelah timur, dan Sumatera Utara di sebelah tenggara dan selatan."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:id="@+id/kontendeskripsi"
                android:paddingBottom="16dp"/>

            <TextView
                android:text="Rekomendasi Tempat Wisata:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/textView2" />

            <ListView
                android:id="@+id/wisata_aceh"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_weight="6.53"
                android:layout_height="175dp" />

            <TextView
                android:text="Rekomendasi Kuliner:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/textView3" />

            <ListView
                android:id="@+id/kuliner_aceh"
                android:layout_width="match_parent"
                android:layout_weight="4.86"
                android:layout_height="175dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
